<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/camera_capture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ring"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="23dp"
            android:layout_marginBottom="25dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="23dp"
            android:background="@drawable/bg_black_900_22dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="18dp"
            >

            <ImageView
                android:id="@+id/camera_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flip_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_flash_on_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/camera_switch"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/multiSnap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_multiple_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/flash"
                android:layout_marginTop="44dp"
                />
            <ImageView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/multiSnap"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_focus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timer"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_grid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/focus"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:id="@+id/upperDownArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_up_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/grid"
                android:layout_marginTop="28dp"
                />
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="grid,focus,timer,multiSnap"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinderPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/btnGallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_no_picture"
            app:layout_constraintBottom_toBottomOf="@id/camera_capture_button"
            app:layout_constraintTop_toTopOf="@id/camera_capture_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/btnSwitchCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_round_grey"
            android:scaleType="center"
            android:src="@drawable/ic_flip_camera"
            app:layout_constraintBottom_toBottomOf="@id/camera_capture_button"
            app:layout_constraintTop_toTopOf="@id/camera_capture_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            tools:ignore="ContentDescription" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/camera_capture_button"
            android:layout_marginBottom="25dp"
            android:padding="5dp"
            android:background="@drawable/bg_transparent_color_reactangle"
            >
            <TextView
                android:id="@+id/btn_0.6x"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_circle_transparent_black"
                android:gravity="center"
                android:textSize="10sp"
                android:text="0.6x"
                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_1x"
                app:layout_constraintVertical_bias="0"
                />
            <TextView
                android:id="@+id/btn_1x"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:textColor="@color/yellow"
                android:background="@drawable/bg_circle_transparent_black"
                android:gravity="center"
                android:textSize="10sp"
                android:text="1"
                android:layout_marginHorizontal="5dp"
                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_0.6x"
                app:layout_constraintEnd_toStartOf="@id/btn_3x"
                />
            <TextView
                android:id="@+id/btn_3x"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_circle_transparent_black"
                android:gravity="center"
                android:textSize="10sp"
                android:text="3"
                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_1x"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>